// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  //Override standard Linux bindings
  {
    "bindings": {
      // replace file_finder::Toggle
      "ctrl-p": [
        "task::Spawn",
        { "task_name": "file_finder", "reveal_target": "center" }
      ]
    }
  },

  {
    "context": "Workspace",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // space + w should save the current file
      "space w": "workspace::Save",
      // space  + q
      "space q": ["pane::CloseActiveItem", { "close_pinned": false }],

      // better pane navigation
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      // ... or other keybindings

      "ctrl-p": [
        "task::Spawn",
        { "task_name": "file_finder", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      //  Move selected text up or down
      "J": "editor::MoveLineDown",
      "K": "editor::MoveLineUp"
    }
  }
]
